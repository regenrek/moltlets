{
  "name": "clawdlets-workspace",
  "private": true,
  "scripts": {
    "postinstall": "pnpm -r build",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r --if-present test",
    "gate": "pnpm -r build && pnpm -r typecheck && pnpm -C packages/cli test && pnpm -C packages/core run coverage",
    "template:smoke": "node scripts/template-smoke.mjs",
    "clawdlets:build": "pnpm -C packages/cli build",
    "clawdlets:doctor": "node packages/cli/dist/main.mjs doctor",
    "clawdlets:bootstrap": "node packages/cli/dist/main.mjs bootstrap",
    "clawdlets:lockdown": "node packages/cli/dist/main.mjs lockdown",
    "clawdlets:server": "node packages/cli/dist/main.mjs server",
    "clawdlets:secrets": "node packages/cli/dist/main.mjs secrets",
    "clawdlets:infra": "node packages/cli/dist/main.mjs infra",
    "clawdlets:help": "node packages/cli/dist/main.mjs --help"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.25.0"
}
