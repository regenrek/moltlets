{
  "name": "clawlets-workspace",
  "private": true,
  "scripts": {
    "dev": "pnpm -C apps/web dev",
    "docs:dev": "pnpm -C apps/docs dev",
    "docs:build": "pnpm -C apps/docs build",
    "postinstall": "pnpm -r build",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r --workspace-concurrency=2 --if-present test",
    "test:unit": "pnpm -r --if-present test:unit",
    "test:contract": "pnpm -r --if-present test:contract",
    "test:integration": "pnpm -r --if-present test:integration",
    "test:nix": "pnpm -r --if-present test:nix",
    "test:layers": "pnpm test:unit && pnpm test:contract && pnpm test:integration && pnpm test:nix",
    "lint": "oxlint -c .oxlintrc.jsonc .",
    "lint:fix": "oxlint -c .oxlintrc.jsonc . --fix",
    "lint:oxlint": "oxlint -c .oxlintrc.jsonc .",
    "lint:typeaware": "oxlint -c .oxlintrc.jsonc --type-aware --type-check apps/docs/src apps/web/src apps/web/convex packages/cli/src packages/core/src packages/shared/src",
    "lint:typeaware:all": "oxlint -c .oxlintrc.jsonc . --type-aware --type-check",
    "lint:json": "oxlint -c .oxlintrc.jsonc . --format=json",
    "check:workspace-boundaries": "node scripts/check-boundaries.mjs",
    "check:core-lib-boundaries": "node scripts/check-core-lib-domain-boundaries.mjs",
    "check:boundaries": "pnpm run check:workspace-boundaries && pnpm run check:core-lib-boundaries",
    "check:lockfile": "pnpm -w install --frozen-lockfile --ignore-scripts",
    "gate": "pnpm -r build && pnpm -r typecheck && pnpm run lint && pnpm run lint:typeaware && pnpm -C packages/cli test && pnpm -C packages/core run coverage",
    "template:smoke": "node scripts/template-smoke.mjs",
    "clawlets:build": "pnpm -C packages/cli build",
    "clawlets:doctor": "node packages/cli/dist/main.mjs doctor",
    "clawlets:bootstrap": "node packages/cli/dist/main.mjs bootstrap",
    "clawlets:lockdown": "node packages/cli/dist/main.mjs lockdown",
    "clawlets:server": "node packages/cli/dist/main.mjs server",
    "clawlets:secrets": "node packages/cli/dist/main.mjs secrets",
    "clawlets:infra": "node packages/cli/dist/main.mjs infra",
    "clawlets:help": "node packages/cli/dist/main.mjs --help",
    "clawlets:openclaw-assets": "tsx scripts/generate-openclaw-assets.ts"
  },
  "devDependencies": {
    "@convex-dev/eslint-plugin": "^1.1.1",
    "@tanstack/eslint-plugin-query": "^5.91.4",
    "@tanstack/eslint-plugin-router": "^1.155.0",
    "oxlint": "^1.46.0",
    "oxlint-tsgolint": "^0.12.0",
    "tsx": "^4.7.0"
  },
  "pnpm": {
    "overrides": {
      "lodash": "^4.17.23"
    },
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.25.0"
}
