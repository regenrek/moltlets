{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Clawlets Release Manifest (v1)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schemaVersion",
    "host",
    "system",
    "channel",
    "releaseId",
    "issuedAt",
    "rev",
    "toplevel",
    "secrets"
  ],
  "properties": {
    "schemaVersion": {
      "type": "integer",
      "const": 1
    },
    "host": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "system": {
      "type": "string",
      "pattern": "^[a-z0-9_]+-[a-z0-9_]+$"
    },
    "channel": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "releaseId": {
      "type": "integer",
      "minimum": 1
    },
    "issuedAt": {
      "type": "string",
      "minLength": 1
    },
    "minUpdaterVersion": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
    },
    "requiredFeatures": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9][a-z0-9-]*$"
      }
    },
    "rev": {
      "type": "string",
      "pattern": "^[0-9a-f]{40}$"
    },
    "toplevel": {
      "type": "string",
      "pattern": "^/nix/store/[^\\s]+$"
    },
    "secrets": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "digest"
      ],
      "properties": {
        "digest": {
          "type": "string",
          "pattern": "^[0-9a-f]{64}$"
        },
        "format": {
          "type": "string",
          "enum": [
            "sops-tar"
          ]
        },
        "url": {
          "type": "string",
          "minLength": 1
        }
      },
      "allOf": [
        {
          "if": {
            "required": [
              "url"
            ]
          },
          "then": {
            "required": [
              "format"
            ]
          }
        },
        {
          "if": {
            "required": [
              "format"
            ]
          },
          "then": {
            "required": [
              "url"
            ]
          }
        }
      ]
    },
    "cache": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "substituters",
        "trustedPublicKeys"
      ],
      "properties": {
        "substituters": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "trustedPublicKeys": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "narinfoCachePositiveTtl": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  },
  "allOf": [
    {
      "not": {
        "required": [
          "minUpdaterVersion",
          "requiredFeatures"
        ]
      }
    }
  ]
}
