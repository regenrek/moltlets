{
  "name": "@clawlets/core",
  "version": "0.4.4",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./doctor": "./dist/doctor.js",
    "./repo-layout": "./dist/repo-layout.js",
    "./lib/*": "./dist/lib/*.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && node ../../scripts/copy-core-assets.mjs",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "pretest": "pnpm -C . build && node ../../scripts/fetch-template-for-tests.mjs",
    "test": "vitest run",
    "pretest:unit": "pnpm -C . build && node ../../scripts/fetch-template-for-tests.mjs",
    "test:unit": "vitest run .unit.test.ts",
    "pretest:contract": "pnpm -C . build && node ../../scripts/fetch-template-for-tests.mjs",
    "test:contract": "vitest run .contract.test.ts",
    "pretest:integration": "pnpm -C . build && node ../../scripts/fetch-template-for-tests.mjs",
    "test:integration": "vitest run .integration.test.ts",
    "pretest:nix": "pnpm -C . build && node ../../scripts/fetch-template-for-tests.mjs",
    "test:nix": "vitest run .nix.test.ts",
    "test:watch": "vitest",
    "pretest:run": "pnpm -C . build && node ../../scripts/fetch-template-for-tests.mjs",
    "test:run": "vitest run",
    "precoverage": "pnpm -C . build && node ../../scripts/fetch-template-for-tests.mjs",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@clawlets/shared": "workspace:*",
    "ajv": "^8.17.1",
    "dotenv": "^17.2.4",
    "giget": "^3.1.2",
    "yaml": "^2.8.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "jiti": "^2.6.1",
    "json-schema-to-typescript": "^15.0.4",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.25.0"
}
