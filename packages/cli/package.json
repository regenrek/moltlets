{
  "name": "clawlets",
  "version": "0.4.3",
  "private": false,
  "type": "module",
  "description": "CLI for clawlets (NixOS fleet + bot operations)",
  "bin": {
    "clawlets": "dist/main.mjs"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown && node ../../scripts/copy-cli-config.mjs && node ../../scripts/copy-cli-assets.mjs",
    "typecheck": "tsc -b --pretty false",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "help": "node dist/main.mjs --help",
    "bootstrap": "node dist/main.mjs bootstrap",
    "doctor": "node dist/main.mjs doctor",
    "lockdown": "node dist/main.mjs lockdown",
    "server": "node dist/main.mjs server",
    "secrets": "node dist/main.mjs secrets",
    "infra": "node dist/main.mjs infra"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@clawlets/core": "workspace:*",
    "@clawlets/shared": "workspace:*",
    "ajv": "^8.17.1",
    "citty": "^0.2.0",
    "giget": "^3.1.1",
    "yaml": "^2.8.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
"@types/node": "^25.1.0",

    "@vitest/coverage-v8": "^4.0.18",
    "tsdown": "^0.20.1",
    "typescript": "^5.6.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/regenrek/clawlets.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.25.0"
}
