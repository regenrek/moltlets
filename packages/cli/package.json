{
  "name": "clawdlets",
  "version": "0.2.3",
  "private": false,
  "type": "module",
  "description": "CLI for clawdlets (NixOS fleet + bot operations)",
  "bin": {
    "clawdlets": "dist/main.mjs"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown && node ../../scripts/copy-cli-config.mjs",
    "typecheck": "tsc -b --pretty false",
    "test": "vitest run",
    "help": "node dist/main.mjs --help",
    "bootstrap": "node dist/main.mjs bootstrap",
    "doctor": "node dist/main.mjs doctor",
    "lockdown": "node dist/main.mjs lockdown",
    "server": "node dist/main.mjs server",
    "secrets": "node dist/main.mjs secrets",
    "infra": "node dist/main.mjs infra"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@clawdlets/clf-queue": "workspace:*",
    "@clawdlets/core": "workspace:*",
    "citty": "^0.1.6",
    "giget": "^2.0.0",
    "yaml": "^2.8.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "tsdown": "^0.20.0-beta.3",
    "typescript": "^5.6.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/regenrek/clawdlets.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.25.0",
  "bundledDependencies": [
    "@clawdlets/core"
  ]
}
